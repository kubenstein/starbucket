{
  "name": "starbucket",
  "version": "1.0.0",
  "description": "Quickly create a dynamic, distributed and auto-syncing git server in a local network.",
  "scripts": {
    "linter": "standard",
    "linter:noNpmError": "standard || true",
    "linter:fix": "standard --fix ; npm run linter:noNpmError",
    "test": "npm run linter && npm run spec",
    "spec": "mocha spec/ --colors"
  },
  "author": {
    "name": "Jakub Niewczas",
    "email": "niewczas.jakub@gmail.com"
  },
  "bin": {
    "starbucket": "bin/starbucket"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kubenstein/starbucket.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.3.2"
  },
  "dependencies": {
    "fs-extra": "^2.0.0",
    "http-proxy": "^1.16.2",
    "node-discover": "^0.6.2",
    "node-git-server": "^0.0.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "standard": "^8.6.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "afterEach"
    ]
